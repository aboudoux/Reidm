@inherits LayoutComponentBase
@inject IDialogService DialogService;


<PageTitle>Reidm.Web</PageTitle>
<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Reidm</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Primary" Edge="Edge.End" OnClick="ClickAddBuilding" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <Drawer />
    </MudDrawer>
    <ContactDrawer Open="true"></ContactDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ClickAddBuilding() {
        DialogService.Show<DialogAddBuilding>("Ajouter un immeuble à étuder",  new DialogOptions() { DisableBackdropClick = true, CloseButton = true});
    }
}
