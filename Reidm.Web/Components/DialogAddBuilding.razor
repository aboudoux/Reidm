@using Reidm.Web.Stores
@using Reidm.Web.Stores.Buildings
@inherits BlazorState.BlazorStateComponent

<MudDialog Style="width: 400px;">
    <DialogContent>
        <MudTextField @bind-Value="BuildingLabel" Label="@("Nom de l'immeuble")" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Info" @onkeydown="Enter" Immediate="true" />
       
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Cancel() => MudDialog.Cancel();
    void Submit()
    {
        Mediator.Send(new BuildingState.AddBuildingToStudy(BuildingLabel));
        MudDialog.Close(DialogResult.Ok(true));
    }

    public void Enter(KeyboardEventArgs e) {
        if (e.Code == "Enter" || e.Code == "NumpadEnter") {
            Submit();
        }
    }

    private string BuildingLabel { get; set; }
}